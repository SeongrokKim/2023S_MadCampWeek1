<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/nameExercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="15dp"
        android:hint="운동 종목"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/timeExerciseCho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/colon"
        android:inputType="number"
        android:hint="초"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="1dp"
        android:id="@+id/colon"
        android:layout_toRightOf="@+id/timeExerciseBun"
        android:textSize="30dp"
        android:text=":"/>

    <EditText
        android:id="@+id/timeExerciseBun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@+id/nameExercise"
        android:inputType="number"
        android:hint="분"
        android:textSize="15dp" />

    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="X"
        android:layout_toRightOf="@+id/timeExerciseCho"/>
</RelativeLayout>